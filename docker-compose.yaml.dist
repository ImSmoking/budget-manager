version: '3.5'

networks:
  budget_manager:
    name: budget_manager

services:

  php:
    container_name: "${PROJECT}_php"
    build:
      context: .docker-config/php
      args:
        - DOCKER_UID=${DOCKER_UID:-1000}
        - DOCKER_GID=${DOCKER_GID:-1000}
    working_dir: /app
    volumes:
      - '.:/app'
      - './.docker-config/php/conf.d/php.ini:/usr/local/etc/php/conf.d/docker-php.ini:ro'
    networks:
      - budget_manager

  nginx:
    container_name: "${PROJECT}_nginx"
    image: nginx:latest
    volumes:
      - '.:/app'
      - './.docker-config/nginx/conf.d/site.conf:/etc/nginx/conf.d/site.conf:ro'
      - './.docker-config/nginx/conf.d/nginx.conf:/etc/nginx/conf.d/docker-nginx.conf:ro'
    environment:
        WORK_DIR: '/app/'
    ports:
      - 8000:80
    networks:
      - budget_manager

  db:
    container_name: "${PROJECT}_db"
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: d0cker!
      MYSQL_DATABASE: db
      MYSQL_USER: user
      MYSQL_PASSWORD: password
    ports:
      - 3310:3306
    networks:
      - budget_manager

  adminer:
      image: adminer
      container_name: '${PROJECT}_adminer'
      ports:
          - 8080:8080
      networks:
          - budget_manager